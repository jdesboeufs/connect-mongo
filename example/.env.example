# Default local container (docker compose up -d)
MONGO_URL=mongodb://root:example@127.0.0.1:27017/example-db?authSource=admin
MONGO_DB_NAME=example-db

# Optional session tweaks
SESSION_SECRET=connect-mongo-example-secret
# SESSION_CRYPTO_SECRET=replace-with-a-long-secret
# MONGO_MAX_POOL_SIZE=10

# TLS flags (after running `yarn tls:setup`)
# MONGO_TLS_CA_FILE=../docker/tls/ca.crt
# MONGO_TLS_CERT_KEY_FILE=../docker/tls/client.pem
# MONGO_TLS_ALLOW_INVALID_CERTIFICATES=false
# MONGO_TLS_ALLOW_INVALID_HOSTNAMES=false

# SRV clusters (Atlas, DocumentDB, etc.)
# Replace the value below with your mongodb+srv string. The config helper
# automatically detects the scheme and merges TLS options if present.
# MONGO_URL=mongodb+srv://cluster0.xxxxxx.mongodb.net/example-db?retryWrites=true&w=majority
